@model Order

@{
    ViewData["Title"] = "Checkout";
}

<h2>Checkout</h2>
<form asp-action="Checkout" method="post">
    <div class="form-group">
        <label asp-for="ShippingAddress">Shipping Address</label>
        <input asp-for="ShippingAddress" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Notes">Notes</label>
        <textarea asp-for="Notes" class="form-control"></textarea>
    </div>
    <input type="submit" name = "payment" class="btn btn-primary" value="Đặt hàng (COD)"></input>
    <input type="submit" name="payment"  class="btn btn-primary" value="Thanh toán VnPay"></input>
</form>  


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
