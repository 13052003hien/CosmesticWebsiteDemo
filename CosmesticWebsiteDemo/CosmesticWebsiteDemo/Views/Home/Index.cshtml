@*Kiều nè*@
@model IEnumerable<CosmesticWebsiteDemo.Models.Product>
<@{
    ViewData["Title"] = "Home page";
    int numOfQuantity = 1;
}
<body>
    <!--Slogan-->

    <section class="py-5">
        <div class="col-sm-12 text-center">
            <h2 class="intro"><i>Sản phẩm BÁN CHẠY</i></h2>
        </div>
        <div class="container px-4 px-lg-5 mt-5">
            <div class="row gx-4 gx-lg-5 row-cols-2 row-cols-md-3 row-cols-xl-4 justify-content-center">
                @foreach (var item in Model)
                {
                        <div class="col mb-5">
                        <div class="card h-100">
                            
                            <!-- Sale badge-->
                            <div class="badge bg-danger text-white position-absolute" style="top: 0.5rem; right: 0.5rem">Bán chạy</div>
                            <!-- Product image-->
                            <img class="card-img-top" src=@item.ImageUrl alt="..." width="auto" />
                            <!-- Product details-->
                            <div class="card-body p-4">
                                <div class="text-center">
                                    <!-- Product name-->
                                    <h5 class="fw-bolder">@Html.DisplayFor(modelItem => item.Name)</h5>
                                    <!-- Product reviews-->
                                    <div class="d-flex justify-content-center small text-warning mb-2">
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                        <div class="bi-star-fill"></div>
                                    </div>
                                    <!-- Product price-->
                                    <span class="text-muted text-decoration-line-through">@item.Price.ToString("#,##0") Vnd</span>
                                </div>
                            </div>
                            <!-- Product actions-->
                            <div class="card-footer p-4 pt-0 border-top-0 bg-transparent">
                                <div class="text-center">
                                    <a class="btn btn-outline-dark mt-auto"
                                       asp-controller="ShoppingCart" asp-action="AddToCart" asp-route-productId="@item.Id" asp-route-quantity="@numOfQuantity">Thêm vào giỏ hàng</a>
                                </div>
                            </div>

                        </div>
                    </div>
                }
            </div>
        </div>
    </section>

